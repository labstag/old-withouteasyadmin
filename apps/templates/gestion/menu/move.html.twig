{% import "gestion/menu/macro.html.twig" as macro_menu %}
{% extends 'gestion.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-6">
            <ul is="entity-move">
            {% for child in menu.children %}
                <li data-id="{{ child.id }}">
                    {% if child.separateur %}
                        {{ 'menu.divider'|trans({}, 'gestion.messages') }}
                    {% else %}
                        {{ child.name }}
                    {% endif %}
                </li>
            {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
