{% extends 'gestion.html.twig' %}
{% block body %}
    {% embed "gestion/table.html.twig" with {
        theads: [
            {
                name: 'menu.name'|trans({}, 'gestion.messages'),
            },
            {
                name: 'menu.icon'|trans({}, 'gestion.messages'),
            },
            {
                name: 'menu.position'|trans({}, 'gestion.messages'),
            },
            {
                name: 'menu.data'|trans({}, 'gestion.messages'),
            },
            {
                name: 'menu.separateur'|trans({}, 'gestion.messages'),
            },
            {
                name: 'menu.clef'|trans({}, 'gestion.messages'),
            }
        ],
        action: true
    } %}
        {% import "gestion/macro.html.twig" as macro_gestion %}
        {% block tbody %}
            {% for entity in pagination %}
                <tr data-id="{{ entity.id }}">
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.icon }}</td>
                    <td>{{ entity.position }}</td>
                    <td>{{ entity.data ? entity.data|json_encode : '' }}</td>
                    <td>{{ entity.separateur ? 'state.yes'|trans({}, 'gestion.messages') : 'state.no'|trans({}, 'gestion.messages') }}</td>
                    <td>{{ entity.clef }}</td>
                    <td>
                        {{ macro_gestion.actions(entity, actions) }}
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}