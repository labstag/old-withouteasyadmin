{% macro link (child, position) %}
    {% import "gestion/macro.html.twig" as macro_gestion %}
    <div class="btngrouptable" role="group">
        {% if child.separateur != true %}
            {{ macro_gestion.edit(child, 'gestion_menu_update') }}
        {% endif %}
        {% if child.children|length >= 2 %}
            {{ _self.move(child, 'gestion_menu_move') }}
        {% endif %}
        {{ macro_gestion.delete(child, 'api_action_delete', 'gestion_menu_index') }}
        {% if position == 0 and child.separateur == false %}
            {{ _self.addlink(child, 'gestion_menu_add') }}
            {{ _self.adddivider(child, 'gestion_menu_divider') }}
        {% endif %}
    </div>
{% endmacro %}
