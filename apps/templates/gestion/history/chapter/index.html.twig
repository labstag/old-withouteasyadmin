{% extends 'gestion.html.twig' %}
{% block body %}
    {% embed "gestion/table.html.twig" with {
        theads: [
            {
                'name': 'chapter.refhistory'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.name',
                'name': 'chapter.name'|trans({}, 'gestion.messages')
            },
            {
                'name': 'chapter.paragraphs'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.published',
                'name': 'chapter.published'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.state',
                'name': 'workflow.state'|trans({}, 'gestion.messages')
            },
            {
                'name': 'chapter.workflow'|trans({}, 'gestion.messages')
            }
        ],
        pagination: pagination,
        action: true
    } %}
        {% import "gestion/macro.html.twig" as macro_gestion %}
        {% block tbody %}
            {% for entity in pagination %}
                <tr data-id="{{ entity.id }}">
                    <td>{{ entity.refhistory.name }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.paragraphs|length }}</td>
                    <td>{{ entity.published|format_datetime(pattern=formatdatetime.back) }}</td>
                    <td>
                        {% for state in workflow_marked_places(entity) %}
                            {{ state }}
                        {% endfor %}
                    </td>
                    <td>
                        {{ macro_gestion.workflow(entity, actions) }}
                    </td>
                    <td>
                        {{ macro_gestion.actions(entity, actions) }}
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
