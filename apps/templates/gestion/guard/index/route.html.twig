{% set state1 = 'api_guard_route'|guard_route %}
{% set state2 = 'api_guard_routegroup'|guard_route %}
{% set state3 = 'api_guard_routegroups'|guard_route %}
{% set state4 = 'api_guard_routesetgroup'|guard_route %}
{% set state = state1 and state2 and state3 and state4 %}
{% if state1 == false %}
    {{ 'guard.lost'|trans({}, 'gestion.messages') }}
{% else %}
    <table is="guard-route" data-url="{{ path('api_guard_route') }}" data-refresh=0>
        <thead>
            <tr>
                <th rowspan=2>
                    {{ 'guard.route'|trans({}, 'gestion.messages') }}
                </th>
                <th rowspan=2>
                    {{ 'guard.actions'|trans({}, 'gestion.messages') }}
                </th>
                {% for group in groups %}
                    <th>
                        {{ group.name }}
                    </th>
                {% endfor %}
            </tr>
            <tr>
                {% for group in groups %}
                    <th>
                        {% if 'superadmin' != group.code %}
                            {% embed "embed/guard/changeroute.html.twig" with {
                                state: 0,
                                url: path('api_guard_routegroup', {'group' : group.id}),
                                token: csrf_token('guard')
                            } %}{% endembed %}
                        {% else %}
                            ----
                        {% endif %}
                    </th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
        {% for route in routes %}
            <tr>
                <td>
                    {{ route.name }}
                </td>
                <td>
                    {% embed "embed/guard/allroute.html.twig" with {
                        state: 0,
                        check: 0,
                        url: path('api_guard_routegroups', {'route': route.id}),
                        route: route.name|e('html_attr'),
                        token: csrf_token('guard')
                    } %}{% endembed %}
                </td>
                {% for group in groups %}
                    <td>
                        {% set enable = guard_route_enable_group(route, group) %}
                        {% if 'superadmin' != group.code and enable %}
                            {% embed "embed/guard/setroute.html.twig" with {
                                title: group.name|e('html_attr'),
                                state: 0,
                                groupe: group.code|e('html_attr'),
                                route: route.name|e('html_attr'),
                                url: path('api_guard_routesetgroup', {'group' : group.id, 'route': route.id}),
                                token: csrf_token('guard')
                            } %}{% endembed %}
                        {% else %}
                            ---
                        {% endif %}
                    </td>
                {% endfor %}
            </tr>
        {% else %}
            <tr>
                <td colspan="{{ groups|length+2 }}" class="text-center">{{ 'norecord'|trans({}, 'gestion.messages') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}