{% set state1 = 'api_guard_workflow'|guard_route %}
{% set state2 = 'api_guard_workflowgroup'|guard_route %}
{% set state3 = 'api_guard_workflowgroups'|guard_route %}
{% set state4 = 'api_guard_workflowsetgroup'|guard_route %}
{% set state = state1 and state2 and state3 and state4 %}
{% if state1 == false %}
    {{ 'guard.lost'|trans({}, 'gestion.messages') }}
{% else %}
    <table is="guard-workflow" data-url="{{ path('api_guard_workflow') }}" data-refresh=0>
        <thead>
            <tr>
                <th rowspan=2>
                    {{ 'guard.entite'|trans({}, 'gestion.messages') }}
                </th>
                <th rowspan=2>
                    {{ 'guard.transition'|trans({}, 'gestion.messages') }}
                </th>
                <th rowspan=2>
                    {{ 'guard.actions'|trans({}, 'gestion.messages') }}
                </th>
                {% for group in groups %}
                    <th>
                        {{ group.name }}
                    </th>
                {% endfor %}
            </tr>
            <tr>
                {% for group in groups %}
                    <th>
                        {% if 'superadmin' != group.code %}
                        {% embed "embed/guard/changeworkflow.html.twig" with {
                            state: 0,
                            url: path('api_guard_workflowgroup', {'group' : group.id}),
                            token: csrf_token('guard')
                        } %}{% endembed %}
                        {% else %}
                            ----
                        {% endif %}
                    </th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
        {% for workflow in workflows %}
            <tr>
                <td>
                    {{ workflow.entity }}
                </td>
                <td>
                    {{ workflow.transition }}
                </td>
                <td>
                    {% embed "embed/guard/allworkflow.html.twig" with {
                        state: 0,
                        check: 0,
                        url: path('api_guard_workflowgroups', {'workflow' : workflow.id}),
                        token: csrf_token('guard')
                    } %}{% endembed %}
                </td>
                {% for group in groups %}
                    <td>
                        {% if 'superadmin' != group.code %}
                            {% embed "embed/guard/setworkflow.html.twig" with {
                                title: group.name|e('html_attr'),
                                state: 0,
                                groupe: group.code|e('html_attr'),
                                entity: workflow.entity|e('html_attr'),
                                transition: workflow.transition|e('html_attr'),
                                url: path('api_guard_workflowsetgroup', {'group' : group.id, 'workflow' : workflow.id}),
                                token: csrf_token('guard')
                            } %}{% endembed %}
                        {% else %}
                            ---
                        {% endif %}
                    </td>
                {% endfor %}
            </tr>
        {% else %}
                <tr>
                    <td colspan="{{ groups|length+3 }}" class="text-center">{{ 'norecord'|trans({}, 'gestion.messages') }}</td>
                </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}