{% extends 'gestion.html.twig' %}
{% block body %}
    <table>
        <tbody>
            <tr>
                <th>{{ 'bookmark.name'|trans({}, 'gestion.messages') }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'bookmark.url'|trans({}, 'gestion.messages') }}</th>
                <td>
                    <a href="{{ entity.url }}" target="_blank">
                        {{ entity.url }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>{{ 'bookmark.published'|trans({}, 'gestion.messages') }}</th>
                <td>{{ entity.published|format_datetime(pattern=formatdatetime.back) }}</td>
            </tr>
            <tr>
                <th>{{ 'bookmark.content'|trans({}, 'gestion.messages') }}</th>
                <td>{{ entity.content|raw }}</td>
            </tr>
            {% set img = attachment(entity.img) %}
            {% if img is not null and img.name is not null %}
            <tr>
                <th>{{ 'bookmark.image'|trans({}, 'gestion.messages') }}</th>
                <td>
                    <picture>
                        <img loading="lazy" alt="{{ 'bookmark.image'|trans({}, 'gestion.messages')|e("html_attr") }}" src="{{ asset(img.name) | imagefilter('my_thumb') }}" />
                    </picture>
                </td>
            </tr>
            {% endif %}
            {% if entity.refcategory != null %}
            <tr>
                <th>{{ 'bookmark.category'|trans({}, 'gestion.messages') }}</th>
                <td>
                    {% if entity.refuser.deletedAt != '' %}
                        {% set url = 'gestion_category_preview' %}
                    {% else %}
                        {% set url = 'gestion_category_show' %}
                    {% endif %}
                    {% set state = url|guard_route %}
                    {% if state == true %}
                        <a href="{{ path(url, {'id': entity.refcategory.id}) }}">{{ entity.refcategory }}</a>
                    {% else %}
                        {{ entity.refcategory }}
                    {% endif %}
                </td>
            </tr>
            {% endif %}
            <tr>
                <th>{{ 'bookmark.user'|trans({}, 'gestion.messages') }}</th>
                <td>
                    {% if entity.refuser.deletedAt != '' %}
                        {% set url = 'gestion_user_preview' %}
                    {% else %}
                        {% set url = 'gestion_user_show' %}
                    {% endif %}
                    {% set state = url|guard_route %}
                    {% if state == true %}
                        <a href="{{ path(url, {'id': entity.refuser.id}) }}">{{ entity.refuser }}</a>
                    {% else %}
                        {{ entity.refuser }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>{{ 'workflow.state'|trans({}, 'gestion.messages') }}</th>
                <td>
                    {% for state in workflow_marked_places(entity) %}
                        {{ state }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
