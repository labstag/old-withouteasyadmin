{% extends 'gestion.html.twig' %}
{% block body %}
    {% embed "gestion/table.html.twig" with {
        theads: [
            {
                'field': 'a.title',
                'name': 'post.title'|trans({}, 'gestion.messages')
            },
            {
                'name': 'post.user'|trans({}, 'gestion.messages')
            },
            {
                'name': 'post.paragraphs'|trans({}, 'gestion.messages')
            },
            {
                'name': 'post.category'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.published',
                'name': 'post.published'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.state',
                'name': 'workflow.state'|trans({}, 'gestion.messages')
            },
            {
                'name': 'post.url'|trans({}, 'gestion.messages')
            },
            {
                'name': 'post.workflow'|trans({}, 'gestion.messages')
            }
        ],
        pagination: pagination,
        action: true
    } %}
        {% import "gestion/macro.html.twig" as macro_gestion %}
        {% block tbody %}
            {% for entity in pagination %}
                <tr data-id="{{ entity.id }}">
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.refuser }}</td>
                    <td>{{ entity.paragraphs|length }}</td>
                    <td>{{ entity.refcategory }}</td>
                    <td>{{ entity.published|format_datetime(pattern=formatdatetime.back) }}</td>
                    <td>
                        {% for state in workflow_marked_places(entity) %}
                            {{ state }}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('front_article', {'slug': entity.slug}) }}" target="_blank">
                            {{ 'page.url'|trans({}, 'gestion.messages') }}
                        </a>
                    </td>
                    <td>
                        {{ macro_gestion.workflow(entity, actions) }}
                    </td>
                    <td>
                        {{ macro_gestion.actions(entity, actions) }}
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
