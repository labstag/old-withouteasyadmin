{% extends 'gestion.html.twig' %}
{% block body %}
    {% embed "gestion/table.html.twig" with {
        theads: [
            {
                'field': 'a.name',
                'name': 'user.groupe.name'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.code',
                'name': 'user.groupe.code'|trans({}, 'gestion.messages')
            },
            {
                'name': 'user.groupe.users'|trans({}, 'gestion.messages')
            }
        ],
        pagination: pagination,
        action: true
    } %}
        {% import "gestion/macro.html.twig" as macro_gestion %}
        {% block tbody %}
            {% for entity in pagination %}
                <tr data-id="{{ entity.id }}">
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.code }}</td>
                    <td><a href="{{ path('gestion_user_index', {'refgroupe': entity.id}) }}">{{ entity.users|length }}</a></td>
                    <td>
                        {{ macro_gestion.actions(entity, actions) }}
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
