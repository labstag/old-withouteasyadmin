{% extends 'gestion.html.twig' %}
{% block body %}
    {% embed "gestion/table.html.twig" with {
        theads: [
            {
                'field': 'a.username',
                'name': 'user.username'|trans({}, 'gestion.messages')
            },
            {
                'name': 'user.groupe'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.email',
                'name': 'user.email'|trans({}, 'gestion.messages')
            },
            {
                'name': 'user.addresss'|trans({}, 'gestion.messages')
            },
            {
                'name': 'user.links'|trans({}, 'gestion.messages')
            },
            {
                'name': 'user.emails'|trans({}, 'gestion.messages')
            },
            {
                'name': 'user.phones'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.state',
                'name': 'workflow.state'|trans({}, 'gestion.messages')
            },
            {
                'name': 'user.workflow'|trans({}, 'gestion.messages')
            }
        ],
        pagination: pagination,
        action: true
    } %}
        {% import "gestion/macro.html.twig" as macro_gestion %}
        {% block tbody %}
            {% for entity in pagination %}
                <tr data-id="{{ entity.id }}">
                    <td>{{ entity.username }}</td>
                    <td>{{ entity.refgroupe }}</td>
                    <td>{{ entity.email }}</td>
                    <td><a href="{{ path('gestion_addressuser_index', {'refuser': entity.id}) }}">{{ entity.addressUsers|length }}</a></td>
                    <td><a href="{{ path('gestion_linkuser_index', {'refuser': entity.id}) }}">{{ entity.linkUsers|length }}</a></td>
                    <td><a href="{{ path('gestion_emailuser_index', {'refuser': entity.id}) }}">{{ entity.emailUsers|length }}</a></td>
                    <td><a href="{{ path('gestion_phoneuser_index', {'refuser': entity.id}) }}">{{ entity.phoneUsers|length }}</a></td>
                    <td>
                        {% for state in workflow_marked_places(entity) %}
                            {{ state }}
                        {% endfor %}
                    </td>
                    <td>
                        {{ macro_gestion.workflow(entity, actions) }}
                    </td>
                    <td>
                        {{ macro_gestion.actions(entity, actions) }}
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
