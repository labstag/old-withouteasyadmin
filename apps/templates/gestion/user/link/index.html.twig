{% extends 'gestion.html.twig' %}
{% block body %}
    {% embed "gestion/table.html.twig" with {
        theads: [
            {
                'field': 'a.name', 
                'name': 'user.link.name'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.address', 
                'name': 'user.link.address'|trans({}, 'gestion.messages')
            },
            {
                'name': 'user.link.user'|trans({}, 'gestion.messages')
            }
        ],
        pagination: pagination,
        action: true
    } %}
        {% import "gestion/macro.html.twig" as macro_gestion %}
        {% block tbody %}
        {% for entity in pagination %}
            <tr data-id="{{ entity.id }}">
                <td>{{ entity.name }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.refuser }}</td>
                <td>
                    {{ macro_gestion.actions(entity, actions) }}
                </td>
            </tr>
        {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
