{% extends 'gestion.html.twig' %}
{% block body %}
    {% embed "gestion/table.html.twig" with {
        theads: [
            {
                'field': 'a.numero',
                'name': 'user.phone.numero'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.country',
                'name': 'user.phone.country'|trans({}, 'gestion.messages')
            },
            {
                'name': 'user.phone.verif'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.type',
                'name': 'user.phone.type'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.principal',
                'name': 'user.phone.principal'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.state',
                'name': 'workflow.state'|trans({}, 'gestion.messages')
            },
            {
                'name': 'user.phone.workflow'|trans({}, 'gestion.messages')
            },
            {
                'name': 'user.phone.user'|trans({}, 'gestion.messages')
            }
        ],
        pagination: pagination,
        action: true
    } %}
        {% import "gestion/macro.html.twig" as macro_gestion %}
        {% block tbody %}
            {% for entity in pagination %}
                <tr data-id="{{ entity.id }}">
                    <td>{{ entity.numero }}</td>
                    <td>
                        <span class="flag-icon flag-icon-{{ entity.country|lower }}"></span>
                        {{ entity.country|country_name('fr') }}
                    </td>
                    <td>
                        {% set check = verif_phone(entity.country, entity.numero)  ? 'ok' : 'ko' %}
                        <span class="check-{{ check }}"></span>
                    </td>
                    <td>{{ entity.type }}</td>
                    <td>{{ entity.principal ? 'state.yes'|trans({}, 'gestion.messages') : 'state.no'|trans({}, 'gestion.messages') }}</td>
                    <td>
                        {% for state in workflow_marked_places(entity) %}
                            {{ state }}
                        {% endfor %}
                    </td>
                    <td>
                        {{ macro_gestion.workflow(entity, actions) }}
                    </td>
                     <td>
                        {{ entity.refuser.username }}
                    </td>
                    <td>
                        {{ macro_gestion.actions(entity, actions) }}
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
