{% import "gestion/macro.html.twig" as macro_gestion %}
{% extends 'gestion.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.plainPassword) }}
    {{ form_row(form.refgroupe) }}
    {{ form_row(form.email) }}
	<ul class="nav nav-tabs" id="myTab" role="tablist">
		<li class="nav-item" role="presentation">
			<a class="nav-link active" id="emails-tab" data-bs-toggle="tab" href="#emails" role="tab" aria-controls="emails" aria-selected="true">{{ 'form.user.emails'|trans({}, 'gestion.messages') }}</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link" id="phones-tab" data-bs-toggle="tab" href="#phones" role="tab" aria-controls="phones" aria-selected="false">{{ 'form.user.phones'|trans({}, 'gestion.messages') }}</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link" id="address-tab" data-bs-toggle="tab" href="#address" role="tab" aria-controls="address" aria-selected="false">{{ 'form.user.address'|trans({}, 'gestion.messages') }}</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link" id="links-tab" data-bs-toggle="tab" href="#links" role="tab" aria-controls="links" aria-selected="false">{{ 'form.user.links'|trans({}, 'gestion.messages') }}</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link" id="avatar-tab" data-bs-toggle="tab" href="#avatar" role="tab" aria-controls="avatar" aria-selected="false">{{ 'form.user.avatar'|trans({}, 'gestion.messages') }}</a>
		</li>
	</ul>
	<div class="tab-content" id="myTabContent">
		<div class="tab-pane fade show active" id="emails" role="tabpanel" aria-labelledby="emails-tab">
			{{ form_row(form.emailUsers) }}
		</div>
		<div class="tab-pane fade" id="phones" role="tabpanel" aria-labelledby="phones-tab">
			{{ form_row(form.phoneUsers) }}
		</div>
		<div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-tab">
			{{ form_row(form.addressUsers) }}
		</div>
		<div class="tab-pane fade" id="links" role="tabpanel" aria-labelledby="links-tab">
			{{ form_row(form.linkUsers) }}
		</div>
		<div class="tab-pane fade" id="avatar" role="tabpanel" aria-labelledby="avatar-tab">
            {{ form_row(form.file) }}
		</div>
	</div>
    {{ form_end(form) }}
{% endblock %}
