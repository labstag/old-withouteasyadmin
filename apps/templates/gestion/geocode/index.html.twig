{% extends 'gestion.html.twig' %}
{% block body %}
	{% embed "gestion/table.html.twig" with {
        theads: [
            {
                'field': 'a.countryCode',
                'name': 'geocode.countrycode'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.postalCode',
                'name': 'geocode.postalcode'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.placeName',
                'name': 'geocode.placename'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.stateName',
                'name': 'geocode.statename'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.provinceName',
                'name': 'geocode.provincename'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.communityName',
                'name': 'geocode.communityname'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.latitude',
                'name': 'geocode.latitude'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.longitude',
                'name': 'geocode.longitude'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.accuracy',
                'name': 'geocode.accuracy'|trans({}, 'gestion.messages')
            },
        ],
        pagination: pagination,
        action: true
    } %}
		{% import "gestion/macro.html.twig" as macro_gestion %}
		{% block tbody %}
			{% for entity in pagination %}
				<tr data-id="{{ entity.id }}">
					<td>
						<span class="flag-icon flag-icon-{{ entity.countryCode|lower }}"></span>
						{{ entity.countryCode|country_name('fr') }}
					</td>
					<td>{{ entity.postalCode }}</td>
					<td>{{ entity.placeName }}</td>
					<td>{{ entity.stateName }}</td>
					<td>{{ entity.provinceName }}</td>
					<td>{{ entity.communityName }}</td>
					<td>{{ entity.latitude }}</td>
					<td>{{ entity.longitude }}</td>
					<td>{{ entity.accuracy }}</td>
					<td>
						{{ macro_gestion.actions(entity, actions) }}
					</td>
				</tr>
			{% endfor %}
		{% endblock %}
	{% endembed %}
{% endblock %}
