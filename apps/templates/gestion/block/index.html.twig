{% extends 'gestion.html.twig' %}
{% block body %}
    {% embed "gestion/table.html.twig" with {
        theads: [
            {
                'field': 'a.title',
                'name': 'block.title'|trans({}, 'gestion.messages')
            },
            {
                'field': 'a.type',
                'name': 'block.type'|trans({}, 'gestion.messages')
            }
        ],
        action: true
    } %}
        {% import "gestion/macro.html.twig" as macro_gestion %}
        {% block tbody %}
            {% for type, row in data %}
                <tr>
                    <td colspan=6 style="text-align: left;">{{ type }}</td>
                </tr>
                {% for entity in row %}
                    <tr data-id="{{ entity.id }}">
                        <td>{{ entity.title }}</td>
                        <td>{{ entity.type }}</td>
                        <td>
                            {{ macro_gestion.actions(entity, actions) }}
                        </td>
                    </tr>
                {% endfor %}
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
{% block modal %}
    {{ parent() }}
    {% include "gestion/block/add.html.twig" %}
{% endblock %}
