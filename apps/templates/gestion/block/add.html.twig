<div id="blockadd-modal" tabindex="-1" aria-labelledby="blockadd-modalLabel" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="blockadd-modalLabel">
                    {{ 'modal.block.title'|trans }}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(newform) }}
                {{ form_end(newform) }}
            </div>
            <div class="modal-footer">
                {% embed "embed/confirm/close.html.twig" %}{% endembed %}
            </div>
        </div>
    </div>
</div>