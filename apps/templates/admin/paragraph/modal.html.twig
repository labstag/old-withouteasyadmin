{% if paragraphurl != '' %}
    <div class="modal fade" id="paragrapheModal" tabindex="-1" aria-labelledby="paragrapheModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modifier</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <iframe id="iframe_paragaph" name="iframe_paragaph" title="Inline Frame Example" width="100%" height="700" src="{{ path(paragraphurl) }}" data-src="{{ path(paragraphurl) }}"></iframe>
                </div>
            </div>
        </div>
    </div>
{% endif %}
